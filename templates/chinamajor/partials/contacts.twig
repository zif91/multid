{% set map = runSnippet('map', {zoom:'15',grey:'1', class:'123', coords:baseSettings.salon_coordinates, width:'80', title:baseSettings.pagetitle,color:'#dc143c'
}) %}
<div class="bottom-page-contacts position-relative">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-6">
                    <h2 class="h2 mb-3">Контакты</h2>
                    <h3 class="mb-2">{{baseSettings.pagetitle}}</h3>
                    <div class="flex">
                        <div class="adress mb-3">
                            {{baseSettings.salon_location}}
                        </div>
                        <div class="phone mb-3">
                            <a href="#" class="d-block">{{ runSnippet('formatPhone', {number: baseSettings["salon-phone"], format: '+7 (xxx) xxx-xx-xx', link: '1'}) | raw}}</a>
                        </div>
                    </div>
                    <div class="map">                    {{ map | raw }}

                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h2 class="h2 mb-3">
                        Остались вопросы?
                        <span>свяжитесь с нами</span>
                    </h2>
                    <div class="field mb-3">
                        <p class="mb-2">Имя</p>
                        <input type="text" placeholder="Ваше имя" class="w-100 px-3">
                    </div>
                    <div class="field mb-4">
                        <p class="mb-2">Телефон</p>
                        <input type="text" placeholder="+7 (___) ___-__-__" class="w-100 px-3">
                    </div>
                    <button class="w-100">Оставить заявку</button>
                </div>
            </div>
        </div>
        <div class="image">
            <img src="/templates/chinamajor/img/bottom-page-contacts.png">
        </div>
    </div>

